# Contributor: almostalive   <almostalive2003 at gmail dot com>

pkgname=libretro-psx-pi-git
pkgver=1269.eaa0324
pkgrel=1
pkgdesc="Libretro implementation for PlayStation games (PCSX ReARMed)"
arch=('armv6h' 'armv7h')
url="https://github.com/libretro/pcsx_rearmed"
license=('GPL')
conflicts=('libretro-pcsx_rearmed-git')
depends=('zlib')
makedepends=('git')

_libname=pcsx_rearmed_libretro
_gitname=pcsx_rearmed
source=("git+https://github.com/libretro/${_gitname}.git"
        "https://raw.github.com/libretro/libretro-super/master/dist/info/${_libname}.info"
	"disable_x.patch")
md5sums=('SKIP'
         'SKIP'
	 'SKIP')

pkgver() {
  cd "${_gitname}"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "${_gitname}"
  patch -Np1 -i ../../disable_x.patch
  if grep -q ARMv7 /proc/cpuinfo; then
    export CFLAGS="-mcpu=cortex-a7 -mfpu=neon-vfpv4 -mfloat-abi=hard -O3"
    export CXXFLAGS=$CFLAGS
    ./configure --platform=libretro --enable-neon
  else
    export CFLAGS="-march=armv6j -mfpu=vfp -mfloat-abi=hard"
    export CXXFLAGS=$CFLAGS
    ./configure --platform=libretro --disable-neon
  fi
  make
}

package() {
  install -Dm644 "${_gitname}/libretro.so" "${pkgdir}/usr/lib/libretro/libretro-psx.so"
  install -Dm644 "${_libname}.info" "${pkgdir}/usr/lib/libretro/libretro-psx.info"
}
